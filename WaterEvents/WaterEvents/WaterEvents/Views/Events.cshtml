@model WaterEvents.Models.EventsModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row event-page main content-page">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h1>Arrangementer</h1>
            </div>
        </div>

        @foreach (var item in Model.Events)
        {
            @RenderEvent(item)
        }

        <div class="row">
            <div class="col-sm-8 col-sm-push-4">
                @Html.Partial("_SubMenu", Model.SubMenu)
            </div>
        </div>

    </div>
</div>

@helper RenderEvent(WaterEvents.Models.HelperModels.EventModel ev)
{
    <div class="row event">
        <div class="col-sm-4 text-center">
            @if (ev.Image != null)
            {
                <img src="@ev.Image.Url" alt="@ev.Image.Name" />
            }
            
        </div>
        <div class="col-sm-7">
            <h2>@ev.Header</h2>
            @ev.BodyText
            <a class="btn btn-default" href="/kontakt">Book nu!</a>
        </div>
    </div>
}