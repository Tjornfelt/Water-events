@model WaterEvents.Models.FrontPageModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MenuBackground {
    <div id="carousel" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
            <li data-target="#carousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @{
                int counter = 0;
                
                foreach (var item in Model.Slides)
                {
                    
                    <div class="item @(counter == 0?"active":string.Empty)" style="background-image: url('@item.Url'); background-size: cover; background-position: top center; height: 470px;">
                    </div>
                    counter++;
                }
            }
        </div>
    </div>
}

<div class="row front-page main">
    <div class="col-sm-10 col-sm-push-1">
        <div class="row">
            <article class="content col-sm-12">
                <h1>
                    @Model.Header
                </h1>
                @Model.BodyText
            </article>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="video">
                            <iframe style="margin: 0 auto;" width="560" height="320" src="//www.youtube.com/embed/br37qzu4Zs8" frameborder="0" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="facebook">
                            <p>
                                Følg os, og del dine egne oplevelser på facebook eller brug Hashtagget
                                <span>#waterevents</span>
                            </p>
                            <div class="facebook-logo">
                                #waterevents
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="call-to-action" style="background-image:url(http://placehold.it/285x610)">
                    <h2>Bestil dit arrangement i dag!</h2>
                    <a class="btn btn-default full" href="http://google.dk">Book nu!</a>
                </div>
            </div>
        </div>
    </div>
</div>